<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingBottom="24dp"
    android:layout_row="3"
    android:background="@drawable/gradient_indigo_purple"
    android:columnCount="1"
    android:paddingTop="48dp"
    android:clipToPadding="false"
    tools:context="com.example.luke.retag.activities.MediaSelection">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_columnWeight="1"
        android:layout_marginBottom="12dp"
        android:layout_row="1"
        android:layout_rowSpan="1"
        android:layout_rowWeight="1"
        android:background="@drawable/white_rectangle"
        android:elevation="12dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/white_rectangle_top"
            android:orientation="horizontal">

            <Button
                android:id="@+id/descVideo"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@drawable/selector_green_button_corner"
                android:elevation="8dp"
                android:foreground="@drawable/rows_icon"
                android:foregroundGravity="fill" />

            <Button
                android:id="@+id/button4"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_margin="4dp"
                android:layout_marginRight="8dp"
                android:background="#00000000"
                android:foreground="@drawable/menuicon"
                android:foregroundTint="#803d8f" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white_rectangle_topleft"
            android:elevation="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/videoIcon"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/videoicon" />

            <TextView
                android:id="@+id/videoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="36dp"
                android:text="Video Library"
                android:textAlignment="center"
                android:textColor="#3d2a71"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_columnWeight="1"
        android:layout_marginTop="12dp"
        android:layout_row="2"
        android:layout_rowSpan="1"
        android:layout_rowWeight="1"
        android:background="@drawable/white_rectangle"
        android:elevation="12dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/white_rectangle_top">

            <Button
                android:id="@+id/descMusic"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:background="@drawable/selector_green_button_corner"
                android:elevation="8dp"
                android:foreground="@drawable/rows_icon"
                android:foregroundGravity="fill" />

            <Button
                android:id="@+id/button"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_margin="4dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:foreground="@drawable/menuicon"
                android:foregroundTint="#673b82" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white_rectangle_topleft"
            android:elevation="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/musicIcon"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/audioicon" />

            <TextView
                android:id="@+id/musicText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="36dp"
                android:text="Music Library"
                android:textAlignment="center"
                android:textColor="#3d2a71"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>

</GridLayout>
