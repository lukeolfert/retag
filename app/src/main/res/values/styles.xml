<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ffffff</item>
        <item name="colorPrimaryDark">#51359e</item>
        <item name="colorAccent">#46c259</item>
        <item name="android:windowTranslucentStatus">true</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.AlbumPop" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="albumPopAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/album_popup_in</item>
        <item name="android:windowExitAnimation">@anim/album_popup_out</item>
    </style>

</resources>
